---
exclude_paths:
  - .idea/
  - .cache/
  - tasks/
  - roles/

enable_list:
  - no-log-password

skip_list:
  - git-latest
  - meta-no-info
  - unnamed-task
  - schema[meta]
  - role-name
  - experimental
  - fqcn
  - name[missing]
  - no-changed-when
  - risky-file-permissions
  - command-instead-of-module
  - schema[playbook]